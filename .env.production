# Production Environment Configuration
# DO NOT commit this file to version control

# Application Environment
NODE_ENV=production
PORT=3000
BACKEND_PORT=8000

# Database Configuration
DATABASE_URL=postgresql://codex_user:${POSTGRES_PASSWORD}@db:5432/codex_bootstrap_prod?schema=public
POSTGRES_DB=codex_bootstrap_prod
POSTGRES_USER_FILE=/run/secrets/db_user
POSTGRES_PASSWORD_FILE=/run/secrets/db_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-in-production-2024
JWT_EXPIRES_IN=24h

# Redis Configuration (if using Redis for caching/sessions)
REDIS_URL=redis://redis:6379

# OAuth2 Configuration
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
OAUTH2_REDIRECT_URI=https://yourdomain.com/auth/callback

# Google Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ChatGPT/OpenAI Integration
OPENAI_API_KEY=your-openai-api-key

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
COOKIE_SECRET=your-super-secure-cookie-secret-change-in-production-2024
SESSION_SECRET=your-super-secure-session-secret-change-in-production-2024

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring & Observability
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/private/privkey.pem
SSL_DHPARAM_PATH=/etc/ssl/certs/dhparam.pem

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# WebSocket Configuration
WEBSOCKET_PORT=8080
WEBSOCKET_PATH=/socket.io
