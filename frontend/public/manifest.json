{
  "name": "Codex Bootstrap",
  "short_name": "Codex",
  "description": "Full-stack application with Next.js and FastAPI - Optimized for ADHD users",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "categories": ["productivity", "business", "utilities"],
  "lang": "en-US",
