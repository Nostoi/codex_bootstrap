# Next.js Frontend Environment Variables
# Copy this file to .env.local and adjust values as needed

# Port Configuration
NEXT_PUBLIC_FRONTEND_PORT=3500
NEXT_PUBLIC_BACKEND_PORT=3501
NEXT_PUBLIC_WEBSOCKET_PORT=3502

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3501/api
NEXT_PUBLIC_WS_URL=ws://localhost:3501

# Application Configuration  
NEXT_PUBLIC_APP_NAME="Codex Bootstrap"
NEXT_PUBLIC_APP_VERSION="0.0.1"

# Development flags
NEXT_PUBLIC_DEBUG=false
