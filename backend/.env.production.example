# Production Environment Variables for Backend
# This file should be created manually in production with actual values

# Database Configuration
DATABASE_URL="postgresql://helmsman_production:CHANGE_THIS_PASSWORD@db:5432/helmsman_production"

# JWT Configuration  
JWT_SECRET="CHANGE_THIS_TO_STRONG_RANDOM_SECRET"
JWT_EXPIRES_IN="7d"

# OAuth2 Configuration
OAUTH2_CLIENT_ID="your-oauth2-client-id"
OAUTH2_CLIENT_SECRET="CHANGE_THIS_TO_ACTUAL_SECRET"
OAUTH2_REDIRECT_URI="https://your-domain.com/api/auth/callback"

# API Keys (if needed)
OPENAI_API_KEY="your-openai-api-key-if-needed"

# Application Configuration
NODE_ENV="production"
PORT="8000"
WEBSOCKET_PORT="8001"
CORS_ORIGIN="https://your-domain.com"

# Feature Flags
FF_ENHANCED_TASK_METADATA="true"
FF_AI_TASK_EXTRACTION="true" 
FF_DAILY_PLANNING="false"
FF_MEM0_INTEGRATION="false"
FF_ADVANCED_AI_FEATURES="false"

# Security Configuration
SECURITY_STRICT_MODE="true"
SECURITY_RATE_LIMIT="100"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Session Configuration
SESSION_SECRET="CHANGE_THIS_TO_STRONG_RANDOM_SECRET"
SESSION_SECURE="true"
SESSION_SAME_SITE="strict"

# Remember to:
# 1. Generate strong random secrets using: openssl rand -base64 32
# 2. Use environment-specific URLs and domains
# 3. Configure actual OAuth2 credentials
# 4. Set up proper SSL certificates
# 5. Never commit this file to version control
