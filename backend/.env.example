# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5487/codex_bootstrap?schema=public"

# For development with SQLite (uncomment to use instead of PostgreSQL)
# DATABASE_URL="file:./dev.db"

# Server Configuration
PORT=8000
CORS_ORIGIN="http://localhost:3333"
FRONTEND_URL="http://localhost:3000"

# JWT Configuration
JWT_SECRET="development_secret_change_in_production"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="30d"
JWT_ISSUER="helmsman-api"
JWT_AUDIENCE="helmsman-app"

# Google API Configuration
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_CALLBACK_URL="http://localhost:8000/auth/google/callback"

# Microsoft Graph API Configuration
MICROSOFT_CLIENT_ID="your_microsoft_client_id"
MICROSOFT_CLIENT_SECRET="your_microsoft_client_secret"
MICROSOFT_CALLBACK_URL="http://localhost:8000/auth/microsoft/callback"
MICROSOFT_TENANT_ID="common"

# Collaboration Configuration
COLLABORATION_PORT=8001

# Security Configuration
ENCRYPTION_KEY="your_64_character_encryption_key_here_change_in_production_abc123"
REDIS_URL="redis://localhost:6379"
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_DIR="./logs/audit"
ADDITIONAL_CORS_ORIGINS="https://yourdomain.com,https://api.yourdomain.com"
API_VERSION="1.0.0"

# OpenAI Configuration
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2000

# Feature Flags Configuration
# Global feature flag overrides (true/false)
# When set, these override all other flag logic
FF_ENHANCED_TASK_METADATA=true
FF_AI_TASK_EXTRACTION=true
FF_DAILY_PLANNING=false
FF_MEM0_INTEGRATION=false
FF_ADVANCED_AI_FEATURES=false
