# Production environment configuration for Codex Bootstrap Backend
NODE_ENV=production
PORT=8000
WEBSOCKET_PORT=8001

# Database Configuration
DATABASE_URL="postgresql://helmsman_prod:${DB_PASSWORD}@db:5432/helmsman_production?schema=public"
REDIS_URL="redis://redis:6379"

# Security Configuration
JWT_SECRET="your-production-jwt-secret-here"
JWT_EXPIRATION="24h"
CORS_ORIGIN="https://your-domain.com"
CORS_CREDENTIALS=true

# Feature Flags
FF_ENHANCED_TASK_METADATA=true
FF_AI_TASK_EXTRACTION=true
FF_DAILY_PLANNING=false
FF_MEM0_INTEGRATION=false
FF_ADVANCED_AI_FEATURES=false

# AI Service Configuration
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Microsoft Graph Configuration (if needed)
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"
MICROSOFT_TENANT_ID="your-microsoft-tenant-id"

# Google Calendar Configuration (if needed)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Session Configuration
SESSION_SECRET="your-production-session-secret"
SESSION_MAX_AGE=86400000

# Application Metadata
APP_NAME="Codex Bootstrap"
APP_VERSION="0.1.0"
APP_DESCRIPTION="AI-Augmented Task Management System"
